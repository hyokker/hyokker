.login, .register {
	text-align: center;
}


</style>
<script type="text/javascript">
	function loginCheck(){
		var id = document.getElementById("id").value;
		var pwd = document.getElementById("pwd").value;
		
		if(id.value==""||id.value.length<0){
			alert("아이디를 입력하세요");
			id.focus();
			return false;
		}
		
		if(pwd.value==""){
			alert("비밀번호를 입력하세요");
			pwd.focus();
			return false;
		}
	}
</script>
</head>
<body>
	<h1>로그인</h1>
	<form>
		<div>
			<label>아이디 <input type="text" id="id"></label><br>
			 <label>비밀번호<input type="password" id="pwd"></label><br>
			  <input type="submit" class="login" value="로그인" onclick="loginCheck();">
			  <input type="button" class="register" value="회원가입" onclick="">
		</div>
	</form>
