<script type="text/javascript">
//함수명은 반드시 지켜주세요.
//body에 있는 내용은 수정하지 않습니다.

	function target15(){
		$('#target15').each(function(idx, item){
			$(this)
		});
	}
	
	function target17(){
		$('#target17').css('background','red');
		
	} 
	
	function target19(){
		$('#target19').empty();
	}
	
 	function target16(){
 	
 		
		$('#target16  td').each(function(idx, item){
 			var b = Number($('#target16  td').text());
			if(b>10){
				$(item).css('background','cyan')
			}
		});
	
	}
	function target18(){
		$('#target18 > span:eq(0)').css("font-weight",'bold');
	} 
	function target20(){
		$('#target20  input[type=text]').attr("disabled",'true');
	}
</script>
